<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="#F8FAFC"
    tools:context=".activity.Transaksisukses_Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Card Container dengan sidebar hijau -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@android:color/white"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="24dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- Sidebar Hijau -->
                <View
                    android:id="@+id/sidebar"
                    android:layout_width="8dp"
                    android:layout_height="485dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentBottom="true"
                    android:background="#10B981" />

                <!-- Traffic Lights Dots -->
                <LinearLayout
                    android:id="@+id/trafficLights"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="16dp"
                    android:gravity="center_vertical">

                    <View
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:background="@drawable/traffic_dot_red"
                        android:layout_marginEnd="6dp" />

                    <View
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:background="@drawable/traffic_dot_yellow"
                        android:layout_marginEnd="6dp" />

                    <View
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:background="@drawable/traffic_dot_green" />

                </LinearLayout>

                <!-- Content Area -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="32dp"
                    android:paddingTop="40dp"
                    android:paddingEnd="32dp"
                    android:paddingBottom="40dp"
                    android:layout_toEndOf="@id/sidebar"
                    android:layout_alignParentTop="true"
                    android:gravity="center_horizontal">

                    <!-- Success Icon dengan background circle -->
                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="24dp">

                        <!-- Circle background -->
                        <View
                            android:layout_width="300dp"
                            android:layout_height="150dp"
                            android:layout_gravity="center_horizontal"
                            android:background="@drawable/circle_green_light_bg" />

                        <!-- Icon -->
                        <ImageView
                            android:id="@+id/icon_success"
                            android:layout_width="300dp"
                            android:layout_height="100dp"
                            android:layout_gravity="center"
                            android:contentDescription="Transaksi Berhasil"
                            android:src="@drawable/baktibersama"
                            app:tint="#10B981" />

                    </FrameLayout>

                    <!-- Success Title -->
                    <TextView
                        android:id="@+id/text_view_thank_you_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Transaksi Berhasil!"
                        android:textColor="#1E293B"
                        android:textSize="28sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="12dp" />

                    <!-- Success Message -->
                    <TextView
                        android:id="@+id/terimakasih"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Pembayaran Anda telah berhasil diproses. Terima kasih atas transaksi Anda."
                        android:textAlignment="center"
                        android:textColor="#64748B"
                        android:textSize="15sp"
                        android:lineSpacingExtra="4dp"
                        android:layout_marginBottom="32dp" />

                    <!-- Button Upload Bukti -->
                    <Button
                        android:id="@+id/btnuploadbukti"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginBottom="12dp"
                        android:background="@color/red_400"
                        android:elevation="0dp"
                        android:stateListAnimator="@null"
                        android:text="Upload Bukti Setor"
                        android:textColor="#FAFAFA"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <!-- Button Kembali ke Beranda -->
                    <Button
                        android:id="@+id/btnkembalikehome"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:background="@color/bakutama"
                        android:text="Kembali ke Beranda"
                        android:textColor="@android:color/white"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:stateListAnimator="@null"
                        android:elevation="0dp" />

                </LinearLayout>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>