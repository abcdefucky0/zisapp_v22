<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="#F8FAFC"
    tools:context=".activity.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Hidden ID Campaign -->
        <TextView
            android:id="@+id/idcampaigndonasi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:maxLines="1"
            android:text="Kode Campaign"
            android:textColor="#1E293B"
            android:visibility="gone" />

        <!-- Header Title -->
        <TextView
            android:id="@+id/txtkodecampaign"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Formulir Pendaftaran"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#1E293B"
            android:gravity="center"
            android:layout_marginBottom="24dp" />

        <!-- Card Container dengan sidebar hijau -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@android:color/white"
            android:layout_marginBottom="24dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- Sidebar Hijau -->
                <View
                    android:id="@+id/sidebar"
                    android:layout_width="6dp"
                    android:layout_height="685dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentBottom="true"
                    android:background="#10B981" />

                <!-- Traffic Lights Dots -->
                <LinearLayout
                    android:id="@+id/trafficLights"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="16dp"
                    android:gravity="center_vertical">

                    <View
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:background="@drawable/traffic_dot_red"
                        android:layout_marginEnd="6dp" />

                    <View
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:background="@drawable/traffic_dot_yellow"
                        android:layout_marginEnd="6dp" />

                    <View
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:background="@drawable/traffic_dot_green" />

                </LinearLayout>

                <!-- Content Area -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="32dp"
                    android:paddingTop="24dp"
                    android:paddingEnd="24dp"
                    android:paddingBottom="24dp"
                    android:layout_toEndOf="@id/sidebar"
                    android:layout_alignParentTop="true">

                    <!-- Section Title -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Data Donasi"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#1E293B"
                        android:layout_marginBottom="20dp" />

                    <!-- Kode Muzakki/Donatur -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                        app:boxBackgroundColor="@android:color/transparent"
                        app:boxStrokeColor="#CBD5E1"
                        app:hintTextColor="#64748B"
                        app:boxCornerRadiusBottomEnd="8dp"
                        app:boxCornerRadiusBottomStart="8dp"
                        app:boxCornerRadiusTopEnd="8dp"
                        app:boxCornerRadiusTopStart="8dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/kodedonatur"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Kode Muzakki/Donatur"
                            android:textColor="#1E293B"
                            android:textSize="14sp"
                            android:focusable="false"
                            android:inputType="textPersonName" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Nama Muzakki/Donatur -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                        app:boxBackgroundColor="@android:color/transparent"
                        app:boxStrokeColor="#CBD5E1"
                        app:hintTextColor="#64748B"
                        app:boxCornerRadiusBottomEnd="8dp"
                        app:boxCornerRadiusBottomStart="8dp"
                        app:boxCornerRadiusTopEnd="8dp"
                        app:boxCornerRadiusTopStart="8dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/namadonatur"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Nama Muzakki/Donatur"
                            android:textColor="#1E293B"
                            android:textSize="14sp"
                            android:focusable="false"
                            android:inputType="textPersonName" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Jenis Pembayaran -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Jenis Pembayaran"
                        android:textColor="#475569"
                        android:textSize="14sp"
                        android:textStyle="normal"
                        android:layout_marginBottom="8dp" />

                    <RadioGroup
                        android:id="@+id/radioGroupdonasi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:orientation="vertical">

                        <com.google.android.material.radiobutton.MaterialRadioButton
                            android:id="@+id/tunai"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tunai"
                            android:textColor="#475569"
                            android:textSize="14sp"
                            app:buttonTint="#22C55E" />

                        <com.google.android.material.radiobutton.MaterialRadioButton
                            android:id="@+id/transfer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Transfer"
                            android:textColor="#475569"
                            android:textSize="14sp"
                            app:buttonTint="#22C55E" />

                        <com.google.android.material.radiobutton.MaterialRadioButton
                            android:id="@+id/ewalet"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="E-Wallet"
                            android:textColor="#475569"
                            android:textSize="14sp"
                            app:buttonTint="#22C55E" />

                        <com.google.android.material.radiobutton.MaterialRadioButton
                            android:id="@+id/virtual"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Virtual Account"
                            android:textColor="#475569"
                            android:textSize="14sp"
                            app:buttonTint="#22C55E" />

                    </RadioGroup>

                    <!-- Nilai Donasi -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                        app:boxBackgroundColor="@android:color/transparent"
                        app:boxStrokeColor="#CBD5E1"
                        app:hintTextColor="#64748B"
                        app:boxCornerRadiusBottomEnd="8dp"
                        app:boxCornerRadiusBottomStart="8dp"
                        app:boxCornerRadiusTopEnd="8dp"
                        app:boxCornerRadiusTopStart="8dp"
                        app:prefixText="Rp ">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/nomimaldonasi"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Nilai Donasi"
                            android:textColor="#1E293B"
                            android:textSize="14sp"
                            android:inputType="number" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Keterangan -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="24dp"
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                        app:boxBackgroundColor="@android:color/transparent"
                        app:boxStrokeColor="#CBD5E1"
                        app:hintTextColor="#64748B"
                        app:boxCornerRadiusBottomEnd="8dp"
                        app:boxCornerRadiusBottomStart="8dp"
                        app:boxCornerRadiusTopEnd="8dp"
                        app:boxCornerRadiusTopStart="8dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/keterangandonasi"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Keterangan"
                            android:textColor="#1E293B"
                            android:textSize="14sp"
                            android:inputType="textMultiLine"
                            android:maxLines="4"/>

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Button Lanjutkan -->
                    <Button
                        android:id="@+id/btnsimpandonasi"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:background="@color/my_primary_color"
                        android:text="Lanjutkan"
                        android:textColor="@android:color/white"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:stateListAnimator="@null"
                        android:elevation="0dp"/>

                </LinearLayout>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>