<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="#E8E8E8"
    tools:context=".activity.Zis_Masuk_Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Header Title -->
        <TextView
            android:id="@+id/txtkodecampaign"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Setoran Zakat Infaq dan Sedekah"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#1E293B"
            android:gravity="center"
            android:layout_marginBottom="24dp" />

        <!-- Card Container dengan sidebar hijau -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@android:color/white"
            android:layout_marginBottom="24dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- Sidebar Hijau -->
                <View
                    android:id="@+id/sidebar"
                    android:layout_width="5dp"
                    android:layout_height="680dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentBottom="true"
                    android:background="#fffff" />

                <!-- Traffic Lights Dots -->
                <LinearLayout
                    android:id="@+id/trafficLights"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="16dp"
                    android:gravity="center_vertical">

                    <View
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:background="@drawable/traffic_dot_red"
                        android:layout_marginEnd="6dp" />

                    <View
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:background="@drawable/traffic_dot_yellow"
                        android:layout_marginEnd="6dp" />

                    <View
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:background="@drawable/traffic_dot_green" />

                </LinearLayout>

                <!-- Content Area -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="32dp"
                    android:paddingTop="24dp"
                    android:paddingEnd="24dp"
                    android:paddingBottom="24dp"
                    android:layout_toEndOf="@id/sidebar"
                    android:layout_alignParentTop="true">

                    <!-- Section Title -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Data Setoran"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#1E293B"
                        android:layout_marginBottom="20dp" />

                    <!-- Kode Muzakki -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                        app:boxBackgroundColor="@android:color/transparent"
                        app:boxStrokeColor="#CBD5E1"
                        app:hintTextColor="#64748B"
                        app:boxCornerRadiusBottomEnd="8dp"
                        app:boxCornerRadiusBottomStart="8dp"
                        app:boxCornerRadiusTopEnd="8dp"
                        app:boxCornerRadiusTopStart="8dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/kodemuzakki"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Kode Muzakki"
                            android:textColor="#1E293B"
                            android:textSize="14sp"
                            android:focusable="false"
                            android:inputType="textPersonName" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Nama Muzakki -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                        app:boxBackgroundColor="@android:color/transparent"
                        app:boxStrokeColor="#CBD5E1"
                        app:hintTextColor="#64748B"
                        app:boxCornerRadiusBottomEnd="8dp"
                        app:boxCornerRadiusBottomStart="8dp"
                        app:boxCornerRadiusTopEnd="8dp"
                        app:boxCornerRadiusTopStart="8dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/namapenyetor"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Nama Muzakki"
                            android:textColor="#1E293B"
                            android:textSize="14sp"
                            android:focusable="false"
                            android:inputType="textPersonName" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Jenis Setoran -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Jenis Setoran"
                        android:textColor="#475569"
                        android:textSize="14sp"
                        android:textStyle="normal"
                        android:layout_marginBottom="8dp" />

                    <RadioGroup
                        android:id="@+id/radioGroup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:orientation="horizontal">

                        <com.google.android.material.radiobutton.MaterialRadioButton
                            android:id="@+id/zakat"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Zakat"
                            android:textColor="#475569"
                            android:textSize="14sp"
                            app:buttonTint="#22C55E" />

                        <com.google.android.material.radiobutton.MaterialRadioButton
                            android:id="@+id/infaq"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Infaq"
                            android:textColor="#475569"
                            android:textSize="14sp"
                            app:buttonTint="#22C55E" />

                        <com.google.android.material.radiobutton.MaterialRadioButton
                            android:id="@+id/sedekah"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Sedekah"
                            android:textColor="#475569"
                            android:textSize="14sp"
                            app:buttonTint="#22C55E" />

                    </RadioGroup>

                    <!-- Metode Pembayaran -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Metode Pembayaran"
                        android:textColor="#475569"
                        android:textSize="14sp"
                        android:textStyle="normal"
                        android:layout_marginBottom="8dp" />

                    <RadioGroup
                        android:id="@+id/radioGroup2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.google.android.material.radiobutton.MaterialRadioButton
                            android:id="@+id/Tunai"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tunai"
                            android:textColor="#475569"
                            android:textSize="14sp"
                            app:buttonTint="#22C55E" />

                        <com.google.android.material.radiobutton.MaterialRadioButton
                            android:id="@+id/transfer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Transfer"
                            android:textColor="#475569"
                            android:textSize="14sp"
                            android:layout_marginLeft="67dp"
                            app:buttonTint="#22C55E" />



                    </RadioGroup>

                    <RadioGroup
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:orientation="horizontal">
                        <com.google.android.material.radiobutton.MaterialRadioButton
                            android:id="@+id/ewalet"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="E-Wallet"
                            android:textColor="#475569"
                            android:textSize="14sp"
                            app:buttonTint="#22C55E" />

                        <com.google.android.material.radiobutton.MaterialRadioButton
                            android:id="@+id/virtual"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Virtual Account"
                            android:textColor="#475569"
                            android:textSize="14sp"
                            android:layout_marginLeft="50dp"
                            app:buttonTint="#22C55E" />


                    </RadioGroup>


                    <!-- Nominal Donasi -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                        app:boxBackgroundColor="@android:color/transparent"
                        app:boxStrokeColor="#CBD5E1"
                        app:hintTextColor="#64748B"
                        app:boxCornerRadiusBottomEnd="8dp"
                        app:boxCornerRadiusBottomStart="8dp"
                        app:boxCornerRadiusTopEnd="8dp"
                        app:boxCornerRadiusTopStart="8dp"
                        app:prefixText="Rp ">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/nomimaldonasi"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Nilai Zakat, Infaq dan Sedekah"
                            android:textColor="#1E293B"
                            android:textSize="14sp"
                            android:inputType="number" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Keterangan -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="24dp"
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                        app:boxBackgroundColor="@android:color/transparent"
                        app:boxStrokeColor="#CBD5E1"
                        app:hintTextColor="#64748B"
                        app:boxCornerRadiusBottomEnd="8dp"
                        app:boxCornerRadiusBottomStart="8dp"
                        app:boxCornerRadiusTopEnd="8dp"
                        app:boxCornerRadiusTopStart="8dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/keterangandonasi"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Keterangan"
                            android:textColor="#1E293B"
                            android:textSize="14sp"
                            android:inputType="textMultiLine"
                            android:maxLines="4"/>

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Button Lanjutkan -->
                    <Button
                        android:id="@+id/btnsimpanzis"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:background="@drawable/button_background"
                        android:elevation="0dp"
                        android:stateListAnimator="@null"
                        android:text="Lanjutkan"
                        android:textColor="@android:color/white"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>