<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8FAFC"
    tools:context=".activity.Campaign_Detail_Activity">

    <!-- ScrollView Area -->
    <ScrollView
        android:id="@+id/scrollContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottomButtons"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="16dp">

            <!-- Foto Campaign -->
            <ImageView
                android:id="@+id/imgCampaignDetail"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:scaleType="centerCrop"
                android:background="#E2E8F0"
                android:contentDescription="Foto Campaign"
                tools:src="@tools:sample/backgrounds/scenic" />

            <!-- Container Info Campaign -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Judul Campaign -->
                <TextView
                    android:id="@+id/judulcampaign"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Peduli Perbaikan Langgar Nurul Ihsan"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="#1E293B"
                    android:layout_marginBottom="12dp"
                    tools:text="Peduli Perbaikan Langgar Nurul Ihsan" />

                <!-- Nominal Terkumpul -->
                <TextView
                    android:id="@+id/nominalTerkumpul"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rp 20.000.000"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#10B981"
                    android:layout_marginBottom="8dp" />

                <!-- Info Bar: Lokasi + Sisa Hari -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:id="@+id/lokasiCampaign"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Banjarmasin"
                        android:textSize="14sp"
                        android:textColor="#64748B" />

                    <TextView
                        android:id="@+id/sisaHari"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sisa hari 289"
                        android:textSize="14sp"
                        android:textColor="#64748B" />

                </LinearLayout>

                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E2E8F0"
                    android:layout_marginBottom="16dp" />

                <!-- Section: Cerita Campaign -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Cerita Campaign"
                        android:textColor="#1E293B"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_arrow_right"
                        android:contentDescription="Arrow"
                        android:tint="#64748B" />

                </LinearLayout>

                <!-- Tanggal -->
                <TextView
                    android:id="@+id/tanggalCerita"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2 September 2025"
                    android:textSize="13sp"
                    android:textColor="#64748B"
                    android:layout_marginBottom="8dp" />

                <!-- Deskripsi Cerita -->
                <TextView
                    android:id="@+id/detailcampaign"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Telah terjadi kebakaran hebat di Desa Tamban Raya RT.03 Kecamatan Mekarsari Kabupaten Barito Kuala pada Selasa, 2 September 2025 pukul 01:10 dini hari.\n\nKebakaran ini menghanguskan 4 unit rumah (3 di antaranya habis terbakar) dan berdampak pada 14 jiwa, dengan kerugian dikasar mencapai Rp. 437 juta."
                    android:textSize="14sp"
                    android:textColor="#475569"
                    android:lineSpacingExtra="4dp"
                    android:layout_marginBottom="12dp" />

                <!-- Foto Cerita Campaign -->
                <ImageView
                    android:id="@+id/imgCeritaCampaign"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="centerCrop"
                    android:background="#E2E8F0"
                    android:contentDescription="Foto Cerita"
                    android:layout_marginBottom="8dp"
                    tools:src="@tools:sample/backgrounds/scenic" />

                <!-- Baca Selengkapnya -->
                <TextView
                    android:id="@+id/btnBacaSelengkapnya"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Baca Selengkapnya"
                    android:textSize="14sp"
                    android:textColor="#10B981"
                    android:textStyle="bold"
                    android:layout_marginBottom="24dp" />

                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E2E8F0"
                    android:layout_marginBottom="16dp" />

                <!-- Section: Donasi -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Donasi"
                        android:textColor="#1E293B"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_arrow_right"
                        android:contentDescription="Arrow"
                        android:tint="#64748B" />

                </LinearLayout>

                <!-- List Donatur -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Donatur 1 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp">

                        <!-- Avatar -->
                        <TextView
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:background="@drawable/circle_avatar_bg"
                            android:gravity="center"
                            android:text="O"
                            android:textColor="@android:color/white"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <!-- Info Donatur -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginStart="12dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Orang Baik"
                                android:textColor="#1E293B"
                                android:textSize="15sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Berdonasi Sebesar Rp1.000"
                                android:textColor="#64748B"
                                android:textSize="13sp"
                                android:layout_marginTop="2dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="1 hari lalu"
                                android:textColor="#94A3B8"
                                android:textSize="12sp"
                                android:layout_marginTop="2dp" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Donatur 2 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp">

                        <!-- Avatar -->
                        <TextView
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:background="@drawable/circle_avatar_bg"
                            android:gravity="center"
                            android:text="O"
                            android:textColor="@android:color/white"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <!-- Info Donatur -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginStart="12dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Orang Baik"
                                android:textColor="#1E293B"
                                android:textSize="15sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Berdonasi Sebesar Rp1.000"
                                android:textColor="#64748B"
                                android:textSize="13sp"
                                android:layout_marginTop="2dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="1 hari lalu"
                                android:textColor="#94A3B8"
                                android:textSize="12sp"
                                android:layout_marginTop="2dp" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E2E8F0"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp" />

                <!-- Section: Doa-doa Orang Baik -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Doa-doa Orang Baik"
                        android:textColor="#1E293B"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_arrow_right"
                        android:contentDescription="Arrow"
                        android:tint="#64748B" />

                </LinearLayout>

                <!-- Doa Item -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="top"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp">

                    <!-- Avatar -->
                    <TextView
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:background="@drawable/circle_avatar_bg"
                        android:gravity="center"
                        android:text="O"
                        android:textColor="@android:color/white"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <!-- Info Doa -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Orang Baik"
                            android:textColor="#1E293B"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1 hari lalu"
                            android:textColor="#94A3B8"
                            android:textSize="12sp"
                            android:layout_marginTop="2dp"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Semoga semua makhluk hidup berbahagia , dan dinurahkan rezekinya"
                            android:textColor="#475569"
                            android:textSize="13sp"
                            android:lineSpacingExtra="2dp" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <!-- Fixed Bottom Buttons -->
    <LinearLayout
        android:id="@+id/bottomButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#E0E0E0"
        android:elevation="8dp"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Button Donasi Langsung (Outline) -->
        <Button
            android:id="@+id/btnDonasiLangsung"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:background="@drawable/outline_green"
            android:elevation="0dp"
            android:stateListAnimator="@null"
            android:text="Donasi Langsung"
            android:textColor="#10B981"
            android:textSize="15sp"
            android:textStyle="bold" />

        <!-- Button Donasi (Solid) -->
        <Button
            android:id="@+id/donasiya"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:background="@color/my_primary_color"
            android:elevation="0dp"
            android:stateListAnimator="@null"
            android:text="Donasi"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            android:textStyle="bold" />

    </LinearLayout>

</RelativeLayout>