<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="?attr/colorSurface"
    android:gravity="center_vertical"
    tools:context=".activity.Upload_Bukti_Activity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">


        <ImageView
            android:id="@+id/icon_success"
            android:layout_width="150dp"
            android:layout_height="150dp"
           android:layout_gravity="center"
            android:contentDescription="Transaksi Berhasil"
            android:src="@drawable/baktibersama"
            app:tint="?attr/colorPrimary" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Upload Bukti Transaksi Anda :"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textAlignment="center"
            android:textColor="?attr/colorOnSurface" />

        <LinearLayout
            android:id="@+id/boxkiri"
            android:layout_width="391dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintEnd_toStartOf="@id/boxtengah">


            <ImageView
                android:id="@+id/imgfotobukti"
                android:layout_width="190dp"
                android:layout_height="173dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="?attr/colorSecondaryContainer"
                android:scaleType="centerInside"
                android:src="@drawable/ic_upload"

                tools:ignore="ContentDescription" />

            <Button
                android:id="@+id/btnPilihGambarbukti"
                android:layout_width="143dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:backgroundTint="?attr/colorSecondary"
                android:text="Pilih File" />
        </LinearLayout>

        <Button
            android:id="@+id/btnsimpanbukti"
            android:layout_width="262dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="?attr/colorPrimary"
            android:text="Kirim Bukti Transaksi" />

    </LinearLayout>

</LinearLayout>