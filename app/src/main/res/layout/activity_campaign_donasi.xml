<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="?attr/colorSurface"
    tools:context=".activity.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:id="@+id/idcampaigndonasi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:maxLines="1"
            android:text="Kode Campaign"
            android:textColor="?attr/colorOnSurface"
            android:visibility="gone" />

        <TextView
            android:id="@+id/txtkodecampaign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:text="Formulir Pendaftaran"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="?attr/colorOnSurface" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:hint="Kode Muzakki/Donatur">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/kodedonatur"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:textColor="?attr/colorOnSurface"
                android:inputType="textPersonName" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:hint="Nama Muzakki/Donatur">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/namadonatur"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:textColor="?attr/colorOnSurface"
                android:inputType="textPersonName" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Jenis Pembayaran:"
            android:textSize="16sp"
            android:textColor="?attr/colorOnSurface" />


        <RadioGroup
            android:id="@+id/radioGroupdonasi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp"
            android:padding="1dp">

            <RadioButton
                android:id="@+id/tunai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:text="Tunai"
                android:textColor="?attr/colorOnSurface" />

            <RadioButton
                android:id="@+id/transfer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Transfer"
                android:textColor="?attr/colorOnSurface" />

            <RadioButton
                android:id="@+id/ewalet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="E-Waller"
                android:textColor="?attr/colorOnSurface" />

            <RadioButton
                android:id="@+id/virtual"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Virtual Account"
                android:textColor="?attr/colorOnSurface" />
        </RadioGroup>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:hint="Nilai Donasi">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/nomimaldonasi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="?attr/colorOnSurface"
                android:inputType="number" />
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:hint="Keterangan">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/keterangandonasi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="?attr/colorOnSurface"
                android:inputType="textMultiLine"
                android:maxLines="4" />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/btnsimpandonasi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="?attr/colorPrimary"
            android:textColor="?attr/colorOnPrimary"
            android:layout_marginBottom="30dp"
            android:text="Lanjutkan" />

    </LinearLayout>

</ScrollView>