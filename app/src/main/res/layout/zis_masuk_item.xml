<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@android:color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp">

        <!-- Sidebar Hijau -->
        <View
            android:id="@+id/sidebar"
            android:layout_width="6dp"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:background="#10B981" />

        <!-- Traffic Lights Dots -->
        <LinearLayout
            android:id="@+id/trafficLights"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <View
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginEnd="5dp"
                android:background="@drawable/traffic_dot_red" />

            <View
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginEnd="5dp"
                android:background="@drawable/traffic_dot_yellow" />

            <View
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:background="@drawable/traffic_dot_green" />

        </LinearLayout>

        <!-- Content Area -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@id/sidebar"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingTop="16dp"
            android:paddingEnd="16dp"
            android:paddingBottom="16dp">

            <!-- Nama Campaign di atas -->
            <TextView
                android:id="@+id/namadonasi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:textColor="#1E293B"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:text="Campaign Pendidikan Anak Yatim" />

            <!-- Container Gambar + Detail -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:orientation="horizontal">

                <!-- Gambar Campaign -->
                <ImageView
                    android:id="@+id/imgCampaign"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="#E2E8F0"
                    android:contentDescription="Gambar Campaign"
                    android:scaleType="centerCrop"
                    tools:src="@tools:sample/avatars" />

                <!-- Detail Donasi -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <!-- Nominal Donasi -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="6dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nominal: "
                            android:textColor="#64748B"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/nominaldonasih"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="#10B981"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            tools:text="Rp 250.000" />

                    </LinearLayout>

                    <!-- Tanggal Setor -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="6dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tanggal: "
                            android:textColor="#64748B"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/tanggalsetor"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="#475569"
                            android:textSize="13sp"
                            tools:text="30 Mei 2025" />

                    </LinearLayout>

                    <!-- Status -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Status: "
                            android:textColor="#64748B"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/ketuk"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="#475569"
                            android:textSize="13sp"
                            tools:text="Berhasil" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>