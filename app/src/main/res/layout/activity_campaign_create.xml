<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="#F8FAFC"
    tools:context=".activity.Campaign_Create_Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Hidden ID Campaign -->
        <TextView
            android:id="@+id/idcampaign"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:maxLines="1"
            android:minHeight="48dp"
            android:text="Kode Campaign"
            android:textColor="#1E293B"
            android:visibility="gone" />

        <!-- Header Title -->
        <TextView
            android:id="@+id/txtkodecampaign"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Usulan Donasi"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#1E293B"
            android:gravity="center"
            android:layout_marginBottom="24dp" />

        <!-- Card Container dengan sidebar hijau -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@android:color/white"
            android:layout_marginBottom="24dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- Sidebar Hijau -->
                <View
                    android:id="@+id/sidebar"
                    android:layout_width="6dp"
                    android:layout_height="730dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentBottom="true"
                    android:background="#10B981" />

                <!-- Traffic Lights Dots -->
                <LinearLayout
                    android:id="@+id/trafficLights"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="16dp"
                    android:gravity="center_vertical">

                    <View
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:background="@drawable/traffic_dot_red"
                        android:layout_marginEnd="6dp" />

                    <View
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:background="@drawable/traffic_dot_yellow"
                        android:layout_marginEnd="6dp" />

                    <View
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:background="@drawable/traffic_dot_green" />

                </LinearLayout>

                <!-- Content Area -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="32dp"
                    android:paddingTop="24dp"
                    android:paddingEnd="24dp"
                    android:paddingBottom="24dp"
                    android:layout_toEndOf="@id/sidebar"
                    android:layout_alignParentTop="true">

                    <!-- Section Title -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Data Campaign"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#1E293B"
                        android:layout_marginBottom="20dp" />

                    <!-- Nama Penerima -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                        app:boxBackgroundColor="@android:color/transparent"
                        app:boxStrokeColor="#CBD5E1"
                        app:hintTextColor="#64748B"
                        app:boxCornerRadiusBottomEnd="8dp"
                        app:boxCornerRadiusBottomStart="8dp"
                        app:boxCornerRadiusTopEnd="8dp"
                        app:boxCornerRadiusTopStart="8dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/txtnamapenerima"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Nama Penerima"
                            android:textColor="#1E293B"
                            android:textSize="14sp"
                            android:inputType="textPersonName" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Jenis Bantuan -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                        app:boxBackgroundColor="@android:color/transparent"
                        app:boxStrokeColor="#CBD5E1"
                        app:hintTextColor="#64748B"
                        app:boxCornerRadiusBottomEnd="8dp"
                        app:boxCornerRadiusBottomStart="8dp"
                        app:boxCornerRadiusTopEnd="8dp"
                        app:boxCornerRadiusTopStart="8dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/jenisbantuan"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Jenis Bantuan"
                            android:textColor="#1E293B"
                            android:textSize="14sp"
                            android:inputType="textPersonName" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Besar Bantuan -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                        app:boxBackgroundColor="@android:color/transparent"
                        app:boxStrokeColor="#CBD5E1"
                        app:hintTextColor="#64748B"
                        app:boxCornerRadiusBottomEnd="8dp"
                        app:boxCornerRadiusBottomStart="8dp"
                        app:boxCornerRadiusTopEnd="8dp"
                        app:boxCornerRadiusTopStart="8dp"
                        app:prefixText="Rp ">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/besarbantuan"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Besar Bantuan"
                            android:textColor="#1E293B"
                            android:textSize="14sp"
                            android:inputType="number" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Alamat -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                        app:boxBackgroundColor="@android:color/transparent"
                        app:boxStrokeColor="#CBD5E1"
                        app:hintTextColor="#64748B"
                        app:boxCornerRadiusBottomEnd="8dp"
                        app:boxCornerRadiusBottomStart="8dp"
                        app:boxCornerRadiusTopEnd="8dp"
                        app:boxCornerRadiusTopStart="8dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/alamat"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Alamat"
                            android:textColor="#1E293B"
                            android:textSize="14sp"
                            android:inputType="textMultiLine"
                            android:maxLines="3" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Deskripsi -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="24dp"
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                        app:boxBackgroundColor="@android:color/transparent"
                        app:boxStrokeColor="#CBD5E1"
                        app:hintTextColor="#64748B"
                        app:boxCornerRadiusBottomEnd="8dp"
                        app:boxCornerRadiusBottomStart="8dp"
                        app:boxCornerRadiusTopEnd="8dp"
                        app:boxCornerRadiusTopStart="8dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/deskripsi"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Deskripsi Singkat"
                            android:textColor="#1E293B"
                            android:textSize="14sp"
                            android:inputType="textMultiLine"
                            android:maxLines="8" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Upload Foto Section -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Upload 3 Foto Dokumentasi Pendukung"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:textColor="#1E293B"
                        android:layout_marginBottom="16dp" />

                    <!-- 3 Upload Boxes -->
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="24dp">

                        <!-- Box Kiri -->
                        <LinearLayout
                            android:id="@+id/boxkiri"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintEnd_toStartOf="@id/boxtengah">

                            <ImageView
                                android:id="@+id/imgfoto1"
                                android:layout_width="90dp"
                                android:layout_height="90dp"
                                android:layout_marginBottom="8dp"
                                android:background="@drawable/upload_box_bg"
                                android:scaleType="centerInside"
                                android:src="@drawable/ic_upload"
                                android:padding="20dp"
                                tools:ignore="ContentDescription" />

                            <Button
                                android:id="@+id/btnPilihGambar"
                                android:layout_width="wrap_content"
                                android:layout_height="40dp"
                                android:background="@drawable/button_secondary_background"
                                android:text="File"
                                android:textColor="#64748B"
                                android:textSize="13sp"
                                android:paddingStart="16dp"
                                android:paddingEnd="16dp" />
                        </LinearLayout>

                        <!-- Box Tengah -->
                        <LinearLayout
                            android:id="@+id/boxtengah"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center"
                            app:layout_constraintStart_toEndOf="@id/boxkiri"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintEnd_toStartOf="@+id/boxkanan">

                            <ImageView
                                android:id="@+id/imgfoto2"
                                android:layout_width="90dp"
                                android:layout_height="90dp"
                                android:layout_marginBottom="8dp"
                                android:background="@drawable/upload_box_bg"
                                android:scaleType="centerInside"
                                android:src="@drawable/ic_upload"
                                android:padding="20dp"
                                tools:ignore="ContentDescription" />

                            <Button
                                android:id="@+id/btnPilihGambar2"
                                android:layout_width="wrap_content"
                                android:layout_height="40dp"
                                android:background="@drawable/button_secondary_background"
                                android:text="File"
                                android:textColor="#64748B"
                                android:textSize="13sp"
                                android:paddingStart="16dp"
                                android:paddingEnd="16dp" />
                        </LinearLayout>

                        <!-- Box Kanan -->
                        <LinearLayout
                            android:id="@+id/boxkanan"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center"
                            app:layout_constraintStart_toEndOf="@id/boxtengah"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintEnd_toEndOf="parent">

                            <ImageView
                                android:id="@+id/imgfoto3"
                                android:layout_width="90dp"
                                android:layout_height="90dp"
                                android:layout_marginBottom="8dp"
                                android:background="@drawable/upload_box_bg"
                                android:scaleType="centerInside"
                                android:src="@drawable/ic_upload"
                                android:padding="20dp"
                                tools:ignore="ContentDescription" />

                            <Button
                                android:id="@+id/btnPilihGambar3"
                                android:layout_width="wrap_content"
                                android:layout_height="40dp"
                                android:background="@drawable/button_secondary_background"
                                android:text="File"
                                android:textColor="#64748B"
                                android:textSize="13sp"
                                android:paddingStart="16dp"
                                android:paddingEnd="16dp" />
                        </LinearLayout>
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <!-- Button Kirimkan -->
                    <Button
                        android:id="@+id/btnsimpanusulan"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:background="@color/my_primary_color"
                        android:text="Kirimkan"
                        android:textColor="@android:color/white"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:stateListAnimator="@null"
                        android:elevation="0dp"/>

                </LinearLayout>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>