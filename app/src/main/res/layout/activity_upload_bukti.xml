<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5"
    android:gravity="center">

    <!-- Card Container -->
    <androidx.cardview.widget.CardView
        android:layout_width="377dp"
        android:layout_height="390dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        android:layout_margin="16dp">

        <!-- Tambah wrapper horizontal untuk garis + konten -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <!-- Garis Hijau di sebelah kiri -->
            <View
                android:layout_width="4dp"
                android:layout_height="match_parent"
                android:background="#26823F" />

            <!-- Semua konten original tetap sama -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@android:color/white">

                <!-- Dots -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_marginTop="16dp">

                    <View
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_marginEnd="6dp"
                        android:background="@drawable/traffic_dot_red" />

                    <View
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_marginEnd="6dp"
                        android:background="@drawable/traffic_dot_yellow" />

                    <View
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:background="@drawable/traffic_dot_green" />
                </LinearLayout>

                <!-- Header Logo -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="12dp"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/logo_upz2"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        android:contentDescription="Logo Bakti Bersama" />

                </LinearLayout>

                <!-- Upload Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_margin="16dp"
                    android:background="#F5F5F5"
                    android:gravity="center"
                    android:padding="20dp">

                    <ImageView
                        android:id="@+id/ivUploadIcon"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/ic_upload_image"
                        android:contentDescription="Upload Icon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Upload Bukti Transaksi Anda"
                        android:textSize="12sp"
                        android:textColor="#424242"
                        android:layout_marginTop="8dp"
                        android:fontFamily="sans-serif-medium" />

                    <ImageView
                        android:id="@+id/ivPreview"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:layout_marginTop="8dp"
                        android:visibility="gone"
                        android:scaleType="centerCrop"
                        android:contentDescription="Preview" />

                </LinearLayout>

                <!-- Buttons (TIDAK DIUBAH) -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <Button
                        android:id="@+id/btnPilihGambar"
                        android:layout_width="0dp"
                        android:layout_height="44dp"
                        android:layout_weight="1"
                        android:text="Pilih Gambar"
                        android:textColor="#4CAF50"
                        android:textSize="12sp"
                        android:background="@drawable/btn_outline_green"
                        android:layout_marginEnd="6dp"
                        android:textAllCaps="false"
                        android:fontFamily="sans-serif-medium" />

                    <Button
                        android:id="@+id/btnKirimBukti"
                        android:layout_width="0dp"
                        android:layout_height="44dp"
                        android:layout_weight="1"
                        android:text="Kirim Bukti Transaksi"
                        android:textColor="@android:color/white"
                        android:textSize="12sp"
                        android:background="@drawable/btn_solid_green"

                        android:textAllCaps="false"
                        android:fontFamily="sans-serif-medium" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>