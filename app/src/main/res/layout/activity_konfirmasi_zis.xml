<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="#F8FAFC"
    tools:context=".activity.Konfirmasi_Zis_Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Header Title -->
        <TextView
            android:id="@+id/judul"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="KONFIRMASI SETORAN ZIS"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#1E293B"
            android:gravity="center"
            android:layout_marginBottom="24dp" />

        <!-- Card Container dengan sidebar hijau -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@android:color/white"
            android:layout_marginBottom="24dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- Sidebar Hijau -->
                <View
                    android:id="@+id/sidebar"
                    android:layout_width="6dp"
                    android:layout_height="580dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentBottom="true"
                    android:background="#10B981" />

                <!-- Traffic Lights Dots -->
                <LinearLayout
                    android:id="@+id/trafficLights"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="16dp"
                    android:gravity="center_vertical">

                    <View
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:background="@drawable/traffic_dot_red"
                        android:layout_marginEnd="6dp" />

                    <View
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:background="@drawable/traffic_dot_yellow"
                        android:layout_marginEnd="6dp" />

                    <View
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:background="@drawable/traffic_dot_green" />

                </LinearLayout>

                <!-- Content Area -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="32dp"
                    android:paddingTop="24dp"
                    android:paddingEnd="24dp"
                    android:paddingBottom="24dp"
                    android:layout_toEndOf="@id/sidebar"
                    android:layout_alignParentTop="true">

                    <!-- Section Title -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Detail Setoran"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#1E293B"
                        android:layout_marginBottom="20dp" />

                    <!-- Nama Muzakki -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:id="@+id/ldonatur"
                            android:layout_width="140dp"
                            android:layout_height="wrap_content"
                            android:text="Nama Muzakki"
                            android:textColor="#64748B"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/ndonatur"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Nama Donaturnya"
                            android:textStyle="bold"
                            android:textColor="#1E293B"
                            android:textSize="14sp" />

                    </LinearLayout>

                    <!-- Kode Muzakki -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:id="@+id/lkodedonatur"
                            android:layout_width="140dp"
                            android:layout_height="wrap_content"
                            android:text="Kode Muzakki"
                            android:textColor="#64748B"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/nkodedonatur"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Kode Muzakki"
                            android:textStyle="bold"
                            android:textColor="#1E293B"
                            android:textSize="14sp" />

                    </LinearLayout>

                    <!-- Jenis ZIS -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:id="@+id/ldonasi"
                            android:layout_width="140dp"
                            android:layout_height="wrap_content"
                            android:text="Jenis ZIS"
                            android:textColor="#64748B"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/ndonasi"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Nama Donasi"
                            android:textStyle="bold"
                            android:textColor="#1E293B"
                            android:textSize="14sp" />

                    </LinearLayout>

                    <!-- Metode Setoran -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:id="@+id/lmetode"
                            android:layout_width="140dp"
                            android:layout_height="wrap_content"
                            android:text="Metode Setoran"
                            android:textColor="#64748B"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/nmetode"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Metode Donasi"
                            android:textStyle="bold"
                            android:textColor="#1E293B"
                            android:textSize="14sp" />

                    </LinearLayout>

                    <!-- Nominal ZIS -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:id="@+id/lnominal"
                            android:layout_width="140dp"
                            android:layout_height="wrap_content"
                            android:text="Nominal ZIS"
                            android:textColor="#64748B"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/nnominal"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Nilai Donasi"
                            android:textStyle="bold"
                            android:textColor="#10B981"
                            android:textSize="16sp" />

                    </LinearLayout>

                    <!-- Keterangan -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:id="@+id/lketerangan"
                            android:layout_width="140dp"
                            android:layout_height="wrap_content"
                            android:text="Keterangan"
                            android:textColor="#64748B"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/nketerangan"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Keterangan"
                            android:textStyle="bold"
                            android:textColor="#1E293B"
                            android:textSize="14sp"
                            android:maxLines="5" />

                    </LinearLayout>

                    <!-- Divider -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#E2E8F0"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="20dp" />

                    <!-- Info Transfer -->
                    <TextView
                        android:id="@+id/linfo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Silakan Setorkan ZIS anda Via Transfer melalui Rekening Resmi UPZ Bakti Bersama pada :"
                        android:textAlignment="center"
                        android:textSize="14sp"
                        android:textColor="#64748B"
                        android:lineSpacingExtra="4dp"
                        android:layout_marginBottom="16dp" />

                    <!-- Rekening Card -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/bg_rekening"
                        android:padding="16dp"
                        android:layout_marginBottom="24dp">

                        <TextView
                            android:id="@+id/bsi"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="BSI - 100 111 1104"
                            android:textAlignment="center"
                            android:textSize="16sp"
                            android:textColor="#2563EB"
                            android:textStyle="bold"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:id="@+id/kalsel"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Bank Kalsel Syariah - 730 015 6171"
                            android:textAlignment="center"
                            android:textSize="16sp"
                            android:textColor="#2563EB"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <!-- Button Setorkan -->
                    <Button
                        android:id="@+id/btnsimpandonasi"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:background="@color/my_primary_color"
                        android:text="Setorkan"
                        android:textColor="@android:color/white"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:stateListAnimator="@null"
                        android:elevation="0dp"
                        android:layout_marginBottom="12dp" />

                    <!-- Button Kembali -->
                    <Button
                        android:id="@+id/btnkembalidonasi"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:background="@color/my_on_primary_color"
                        android:text="Kembali ke Beranda"
                        android:textColor="#64748B"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:stateListAnimator="@null"
                        android:elevation="0dp" />

                </LinearLayout>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>